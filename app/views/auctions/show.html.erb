<h1><%= @auction.title %></h1>
  <div>
    <p><%= @auction.details %><p>
  </div>
  <div>
    <p><%= @auction.end_date %><p>
  </div>
  <div>
    <p>Price: <%= @auction.reserve_price %><p>
  </div>

  <div id="bid-form">
    <%= render "/bids/form" %>
  </div>

  <h3>Previous Bids</h3>

  <% @auction.bids.each do |bid| %>
    <%= render "/bids/bid", bid: bid %>
  <% end %>
